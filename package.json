{
  "name": "nfc-hospital-guide",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend-pwa",
    "admin-dashboard",
    "backend",
    "chatbot-server"
  ],
"scripts": {
    "dev": "concurrently -n \"Django,React,Admin\" -c \"yellow,cyan,green\" \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:admin\"",
    "dev:all": "concurrently -n \"Django,React,Admin,Chat\" -c \"yellow,cyan,green,magenta\" \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:admin\" \"npm run dev:chatbot\"",
    "dev:frontend": "npx pnpm --filter frontend-pwa dev",
    "dev:admin": "npx pnpm --filter admin-dashboard dev",
    "dev:backend": "cd backend/nfc_hospital_system && python manage.py runserver",
    "dev:chatbot": "npx pnpm --filter chatbot-server dev",
    "dev:db": "cd backend/nfc_hospital_system && python manage.py makemigrations && python manage.py migrate",
    "dev:setup": "npm run install:all && npm run dev:db && npm run create:dirs",
    "install:all": "npx pnpm install",
    "create:dirs": "cd backend/nfc_hospital_system && python create_dirs.py",
    "build": "npx pnpm run -r build",
    "build:frontend": "npx pnpm --filter frontend-pwa build",
    "start": "npx pnpm run -r start",
    "test": "npx pnpm run -r test",
    "lint": "npx pnpm run -r lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "npx pnpm run -r clean",
    "type:generate": "cd backend/nfc_hospital_system && python manage.py generateschema --file openapi-schema.yml && npm run type:convert",
    "type:convert": "openapi-typescript backend/nfc_hospital_system/openapi-schema.yml -o frontend-pwa/src/types/api.ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "nodemon": "^3.1.10",
    "concurrently": "^8.2.2",
    "openapi-typescript": "^6.7.5"
  }
}