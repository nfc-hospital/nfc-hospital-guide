# backend/.env.example
# 팀원들이 복사해서 사용할 환경변수 템플릿

# Django 환경 설정
DJANGO_ENVIRONMENT=development
SECRET_KEY=django-insecure-change-this-key-for-production
DEBUG=True

# JWT 보안 키
JWT_SECRET_KEY=your-jwt-secret-key-here

# ===========================================
# 데이터베이스 설정 (현재 AWS RDS MySQL 사용)
# ===========================================
DB_NAME=nfc_hospital_db
DB_USER=nfchospital
DB_PASSWORD=팀_공유_비밀번호로_변경
DB_HOST=팀_공유_RDS_엔드포인트로_변경
DB_PORT=3306

# ===========================================
# 로컬 개발 설정
# ===========================================
# Redis 설정 (개발용 - 로컬)
REDIS_HOST=127.0.0.1
REDIS_URL=redis://127.0.0.1:6379/0

# CORS 설정 (개발용)
# 콤마로 구분하여 여러 도메인 추가 가능
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# 허용 호스트 (개발용)
# 배포 서버에서는 서버 IP 추가 필요 예: localhost,127.0.0.1,15.164.94.194
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# 외부 서비스 연동 (나중에 설정)
# ===========================================
# 이메일 설정 (선택사항)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=

# 카카오 로그인 (나중에 설정)
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=

# PASS 인증 (나중에 설정)
PASS_API_KEY=

# FCM 푸시 알림 (나중에 설정)
FCM_SERVER_KEY=

# ===========================================
# AWS 설정 (운영용 - 나중에 사용)
# ===========================================
# AWS S3 설정 (선택사항)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=

# AWS Redis (운영용 - 나중에 사용)
AWS_REDIS_URL=redis://your-elasticache-endpoint:6379/0